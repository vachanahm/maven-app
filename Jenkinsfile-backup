pipeline {
    agent any
    
    tools {
        maven "Maven3"
    }
    
    stages {
        stage('Git Checkout-github') {
            steps {
                git branch: 'main', url: 'https://github.com/vachanahm/maven-app.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Create a Docker Image') {
            steps {
                sh 'docker build -t vachana999/base-image:1.1 .'
            }
        }

        stage('Login to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'Docker', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    script {
                        sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                sh 'docker push vachana999/base-image:1.1'
            }
        }
    }

    post {
        always {
            script {
                // Log out from Docker Hub (optional)
                sh 'docker logout'
            }
        }
    }
}
